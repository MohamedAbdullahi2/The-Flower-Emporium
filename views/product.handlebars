<div class="product">
    <img class="product-img" src="../images/{{product.filename}}" alt="product.filename">

    <div class="product-details">
        <h2>{{product.name}}</h2>
        <p>{{product.description}}</p>
        <p>stock: {{product.stock}}</p>
        <p>price: {{product.price}}$</p>
    </div>
    <div class="add-item-div">
        {{#if isInCart}}
        <p class="in-cart"><i class="fa-solid fa-check"></i> Added to Cart</p>
        {{else}}
        <button data-id="{{product.id}}" data-stock="{{product.stock}}" class="button add-cart">Add to Cart</button>
        {{/if}}
    </div>
</div>


<script src="../js/product.js"></script>